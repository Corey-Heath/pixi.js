{
    "compilerOptions": {
        "target": "es5",
        "allowJs": true,
        "sourceMap": true,
        "removeComments": false,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "baseUrl": "./",
        "outDir": "./out",
        "paths": {
            "@pixi/math": ["packages/math/src/"],
            "@pixi/utils": ["packages/utils/src/"],
            "@pixi/core": ["packages/core/src/"],
            "@pixi/sprite": ["packages/sprite/src/"],
            "@pixi/graphics": ["packages/graphics/src/"],
        }
    },
    "exclude": [
        "node_modules",
        "**/dist/**",
        "**/lib/**",
        "**/test/**",
        "**/scripts/**",
        "**/types/**",
        "bundles/**/*.d.ts",
        "rollup.config.js"
    ]
}
